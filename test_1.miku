feat system;

// --- 1. Class Definitions (Part I & II) ---
MikuData Vocaloid {
    id : leek,
    power : rin
}

// --- 2. Global Function (Part I & II) ---
track calculate_sum(a: leek, b: leek) -> leek {
    let res = 0;
    res = a + b;
    offer res;
}

// --- 3. Main Block (Part IV Execution) ---
track world_is_mine() -> ghost {
    // Declarations must be at the top of the block
    let x = 10;
    let y = 5;
    let z = 0;
    let pi = 3.14f;
    let radius = 2.0f;
    let area = 0.0f;
    let is_diva = angel; // true
    let is_virus = virus; // false
    let counter = 3;
    let message = "Miku Number: ";

    // --- 4. Testing Print & Strings ---
    tell_your_world("Welcome to Miku Language Test");

    // --- 5. Testing Arithmetic Expressions (AST) ---
    // x becomes 10 + 5 = 15
    x = x + y; 
    tell_your_world("x (10+5) is:");
    tell_your_world(x);

    // z becomes 15 * 2 = 30
    z = x * 2;
    tell_your_world("z (x*2) is:");
    tell_your_world(z);

    // Float arithmetic: area = 3.14 * 2.0 = 6.28
    area = pi * radius; 
    tell_your_world("Area (float) is:");
    tell_your_world(area);

    // --- 6. Testing Control Flow (If/Else) ---
    // x is 15, so x > 10 is true
    wish (x > 10) {
        tell_your_world("Condition Met: x is greater than 10");
    } 
    regret {
        tell_your_world("Condition Failed");
    }

    // --- 7. Testing Boolean Logic ---
    // 30 == 30 is true
    wish (z == 30) {
        tell_your_world("Logic Check: z equals 30");
    }

    // --- 8. Testing Loop (While) ---
    tell_your_world("Starting Countdown:");
    
    rolling (counter > 0) {
        tell_your_world(counter);
        counter = counter - 1;
    }

    tell_your_world("Test Complete. Shutting down.");
}